<h1>Login</h1>

<form action="/login_web" method="post">
  <input type="email" name="email" placeholder="Email">
  <div class="error-message">
    <%= @errors[:email] %>
  </div>
  <input type="password" name="password" placeholder="Password">
  <div class="error-message">
    <%= @errors[:password] %>
  </div>
  <input type="submit" value="Login">
  <% if flash[:error] %>
    <div class="error-message">
      <%= flash[:error] %>
    </div>
  <% end %>
</form>
